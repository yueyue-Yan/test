    <script type="text/javascript">

        jQuery(function ($) {

            $("input.time:first").datetimepicker({
                minView: "month",
                language:  'zh-CN',
                format: 'yyyy-mm-dd hh:mm:ss',
                autoclose: true,
                todayBtn: true,
                pickerPosition: "bottom-left"
            });
            $("input.time:eq(1)").datetimepicker({
                minView: "month",
                language:  'zh-CN',
                format: 'yyyy-mm-dd hh:mm:ss',
                autoclose: true,
                todayBtn: true,
                pickerPosition: "top-left"
            });

            //定制字段
            $("#definedColumns > li").click(function (e) {
                //防止下拉菜单消失
                e.stopPropagation();
            });

            // 加载所有者
            $.get("/user/getAllUserName.json", function (data) {
                // data: ["工号 | zhangsan", "工号 | lisi", ...]
                $(data).each(function () {
                    $("<option>"+this+"</option>").appendTo("select[name=owner]");
                });
            });

            $("#createBtn").click(function () {
                // 所有者默认是当前登录的用户
                $("#create-contactsOwner").val("${user.loginAct} | ${user.name}");

            });

            $("#create-customerName").typeahead({
                source: function (keyword, process) {
                    // keyword: 输入框中值
                    $.get("/contacts/getCustomerName.json?name=" + keyword, function (data) {
                        // ["公司名1", "公司名2", ...]
                        process(data);
                    }, "json");
                },
                delay: 500 // 输入内容500毫秒之后进行查询，如果在500毫秒内又进行了其它字符的输入，则重新计时
            });


            function load() {
                alert("添加成功，重新加载列表！");
            }

            // 全局ajax默认的success方法，如果方法有自己的success，则全局的会被覆盖
            $.ajaxSetup({
                success: function (data) {
                    if (data.success) {
                        load();
                        $("div[id$=Modal]").modal("hide");
                    }
                }
            });

            $("#saveBtn").click(function () {
                var name = $.trim( $("#create-surname").val() );
                if (!name) {
                    $.alert("请输入客户姓名！");
                    return ;
                }

                $.ajax({
                    url: "/contacts/save.do",
                    type: "post",
                    data: $("#createForm").formJSON()
                });

            });

        });

    </script>
